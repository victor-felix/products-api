{
  "name": "products-api",
  "version": "1.0.0",
  "description": "This is the backend for the Products module",
  "main": "main/server.ts",
  "scripts": {
    "start": "node dist/main/server.js",
    "build": "rm -rf dist && tsc --build tsconfig.build.json && tscpaths -p tsconfig.build.json -s ./src -o ./dist",
    "dev": "cross-env NODE_ENV=dev ts-node-dev -r tsconfig-paths/register --respawn ./src/main/server.ts",
    "lint": "npx eslint . --ext .js,.jsx,.ts,.tsx -f json -o ./target/lint/report.json | true",
    "lint:commit": "npx eslint . --ext .js,.jsx,.ts,.tsx --cache",
    "test": "cross-env NODE_ENV=test jest --coverage --passWithNoTests --detectOpenHandles --runInBand",
    "test:unit": "cross-env NODE_ENV=test jest --coverage --passWithNoTests --detectOpenHandles --runInBand --testPathPattern=.spec\\.ts",
    "test:integration": "cross-env NODE_ENV=test jest --coverage --passWithNoTests --detectOpenHandles --runInBand --testPathPattern=.test\\.ts",
    "test:specific": "cross-env NODE_ENV=test HTTP_PORT=3333 jest --coverage --passWithNoTests --detectOpenHandles --runInBand",
    "generate:docs": "npx openapi-typescript docs/doc.yaml -o docs/generated-docs.ts",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "cross-env NODE_ENV=dev yarn run typeorm migration:generate -n",
    "migration:run": "yarn run typeorm migration:run",
    "migration:run:dev": "cross-env NODE_ENV=dev yarn run typeorm migration:run"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "multer": "^1.4.3",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21",
    "tsyringe": "^4.6.0",
    "typeorm": "^0.2.41"
  },
  "devDependencies": {
    "@jest-mock/express": "^1.4.5",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.12",
    "@types/faker": "^5.5.9",
    "@types/hapi__joi": "^17.1.7",
    "@types/jest": "^27.0.3",
    "@types/multer": "^1.4.7",
    "@types/source-map-support": "^0.5.4",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.27.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-boundaries": "^2.5.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "faker": "^5.5.3",
    "jest": "^27.4.5",
    "jest-junit": "^13.0.0",
    "jest-mock-extended": "^2.0.4",
    "jest-sonar-reporter": "^2.0.0",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.1",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.12.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.5.4"
  },
  "jestSonar": {
    "reportPath": "target/test-results/jest",
    "reportFile": "TESTS-results-sonar.xml"
  }
}
